@model List<BoxProblem.Data.BoxInventory>
@{
    ViewData["Title"] = "Index";
}

<h3>Full Stacks</h3>
<h2>Box Inventory</h2>

<div align ="right">
@using (Html.BeginForm()){
<p>
    Find by Id: @Html.TextBox("IdSearch")
    <input type="submit" value="Search" />
</p>
}

<p>
    <div>
        <div class="row">
            <div class="mr-1">
               
                    @Html.ActionLink("Add New Box", "Create") ||
                    @Html.ActionLink("Filter", "Filter")
              
            </div>
        </div>
    </div>
</p>

 </div>


<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Id", "Index", new { sortOrder = ViewBag.IdSortParm })
        </th>
        <th>
            @Html.ActionLink("Inventory Count", "Index", new { sortOrder = ViewBag.InventoryCountSortParm })
        </th>
        <th>
            @Html.ActionLink("Weight", "Index", new { sortOrder = ViewBag.WeightSortParm })
        </th>
        <th>
            @Html.ActionLink("Volume", "Index", new { sortOrder = ViewBag.VolumeSortParm })
        </th>
        <th>
            @Html.ActionLink("Can Hold Liquid", "Index", new { sortOrder = ViewBag.CanHoldLiquidParm })
        </th>
        <th>
            @Html.ActionLink("Cost", "Index", new { sortOrder = ViewBag.CostSortParm })
        </th>
        <th>
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(ModelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InventoryCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Volume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CanHoldLiquid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>

    }
</table>
