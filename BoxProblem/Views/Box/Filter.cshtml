@model BoxProblem.Data.BoxInventory;
@{
    ViewData["Title"] = "Filter";
}

<h2>Filter</h2>

@using (Html.BeginForm())
{
<div class="container">
    <div class="row">
        <h3>Weight</h3>
        <div class="col-md-6">
            <label for="Minimum Weight">Minimum Weight</label>
            @Html.EditorFor(model => model.Weight, new { htmlAttributes = new { @class = "form-control", @type = "number", @step = "any", @min = "0" } })
        </div>
        <div class="col-md-6">
            <label for="Max Weight">Max Weight</label>
            @Html.EditorFor(model => model.Weight, new { htmlAttributes = new { @class = "form-control", @type = "number", @step = "any", @min = "0" } })
        </div>
    </div>

    <div class="row">
        <h3>Volume In Cubic Feet</h3>
        <div class="col-md-6">
            <label for="Minimum">Minimum</label>
            @Html.EditorFor(model => model.Volume, new { htmlAttributes = new { @class = "form-control", @type = "number", @step = "any", @min = "0" } })
        </div>
        <div class="col-md-6">
            <label for="Max">Max</label>
            @Html.EditorFor(model => model.Volume, new { htmlAttributes = new { @class = "form-control", @type = "number", @step = "any", @min = "0" } })
        </div>
    </div>

    <div class="row">
            <h3>Can Carry Liquid</h3>
            <div class="col-md-2">
                @Html.EditorFor(model => model.CanHoldLiquid, new { htmlAttributes = new { @class = "form-control", @type = "Radio", @for = "Can Hold Liquid", @value = "Yes" } })
                @Html.EditorFor(model => model.CanHoldLiquid, new { htmlAttributes = new { @class = "form-control", @type = "Radio", @for = "Can't Hold Liquid", @value = "No" } })
                @Html.EditorFor(model => model.CanHoldLiquid, new { htmlAttributes = new { @class = "form-control", @type = "Radio", @for = "Doesn't Matter", @value = "Either" } })
            </div>
    </div>

    <div class="row">
        <h3>Cost</h3>
        <div class="col-md-6">
            <label for="Minimum">Minimum</label>
            @Html.EditorFor(model => model.Cost, new { htmlAttributes = new { @class = "form-control", @type = "number", @step = "any", @min = "0" } })
        </div>
        <div class="col-md-6">
            <label for="Max">Max</label>
            @Html.EditorFor(model => model.Cost, new { htmlAttributes = new { @class = "form-control", @type = "number", @step = "any", @min = "0" } })
        </div>
    </div>
</div>

}